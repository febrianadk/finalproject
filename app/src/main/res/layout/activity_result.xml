<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3EEF9"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.it.febrianadk.camera.ResultActivity">

        <TextView
            android:id="@+id/tv_zona_jantung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Diagnosa Zona Jantung : "
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView_Result2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_zona_jantung"
            android:layout_toEndOf="@+id/tv_zona_jantung"
            android:text=" "
            android:textColor="#000000"
            android:textSize="20dp"/>

        <ImageView
            android:id="@+id/gambar_ROI"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView_Result2"/>

        <TextView

            android:id="@+id/tvKolesterol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/gambar_ROI"
            android:text="Zona Cholesterol Ring :"
            android:textColor="#000000"
            android:textSize="20dp"  />

        <TextView

            android:id="@+id/tv_Result_Kolesterol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvKolesterol"
            android:layout_toEndOf="@+id/tvKolesterol"
            android:text=" "
            android:textColor="#000000"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/ivColorDetection"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_Result_Kolesterol" />

        <TextView
            android:id="@+id/tv_roi_kiri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ivColorDetection"
            android:text="Zona Coronary-Artery :"
            android:textColor="#000000"
            android:textSize="20dp"  />

        <TextView
            android:id="@+id/tv_result_sclera_kiri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_roi_kiri"
            android:layout_toEndOf="@+id/tv_roi_kiri"
            android:text=" "
            android:textColor="#000000"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/iv_roi_kiri"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_result_sclera_kiri" />

        <TextView
            android:id="@+id/tv_roi_kanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/iv_roi_kiri"
            android:text="Zona Cardiac-Veins : "
            android:textColor="#000000"
            android:textSize="20dp"  />

        <TextView
            android:id="@+id/tv_result_sclera_kanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_roi_kanan"
            android:layout_toEndOf="@+id/tv_roi_kanan"
            android:text=" "
            android:textColor="#000000"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/iv_roi_kanan"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_result_sclera_kanan" />

        <TextView
            android:id="@+id/tv_result_akhir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/iv_roi_kanan"
            android:text="  "
            android:textColor="#000000"
            android:textSize="20dp"  />

    </RelativeLayout>
</ScrollView>