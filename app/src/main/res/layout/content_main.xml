<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3EEF9"
    android:fillViewport="true">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:columnCount="2"
        android:paddingLeft="15dp"
        android:paddingTop="170dp"
        android:rowCount="3"
        tools:context="com.it.febrianadk.camera.MainActivity"
        tools:showIn="@layout/activity_main">


        <Button
            android:id="@+id/button"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="@drawable/start_btn" />

        <Button
            android:id="@+id/button2"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/button"
            android:background="@drawable/help_btn" />

        <Button
            android:id="@+id/button3"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_alignTop="@+id/button2"
            android:layout_toEndOf="@+id/button"
            android:background="@drawable/about_btn" />

        <Button
            android:id="@+id/button4"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/exit_btn" />

    </GridLayout>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="55dp"
        android:src="@drawable/coronary_heart_logo"/>

</RelativeLayout>