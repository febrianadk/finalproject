<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:gravity="center"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.it.febrianadk.iris.ProcessActivity"
        tools:showIn="@layout/activity_proses">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Gambar Asli"
            android:textColor="#000000"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/gambarasli"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView5"
            />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/gambarasli"
            android:text="Deteksi Warna Sklera dan Putih Iris"
            android:textColor="#000000"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/ivDeteksiWarnaSklera"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView17" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ivDeteksiWarnaSklera"
            android:text="Biner Putih bukan putih"
            android:textColor="#000000"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/ivPutih"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView6" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ivPutih"
            android:text="Hasil Crop Biner"
            android:textColor="#000000"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/ivCropBiner"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView18" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ivCropBiner"
            android:text="Hasil Crop"
            android:textColor="#000000"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/ivCrop"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView7" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ivCrop"
            android:text="Ditambah Lingkaran"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/ivCropPlusLingkaran"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView8" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ivCrop"
            android:text="Lingkaran Luar"
            android:textColor="#000000"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/ivLingkarHitamLuar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView9" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ivLingkarHitamLuar"
            android:text="Normalisasi"
            android:textColor="#000000"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/ivNormalisasi"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView10" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ivNormalisasi"
            android:text="33%"
            android:textColor="#000000"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/ivNormalisasiCrop"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView11" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ivNormalisasiCrop"
            android:text="Color detection"
            android:textColor="#000000"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/ivColorDetection"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView12" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ivColorDetection"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvJumlahPutih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivColorDetection"
            android:layout_toEndOf="@+id/textView13"
            android:text=""
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvJumlahPutihTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView13"
            android:layout_toEndOf="@+id/textView13"
            android:text=" "
            android:textColor="#B3EEF9"
            android:textSize="20dp" />


        <TextView

            android:id="@+id/tv_Result_Kolesterol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvJumlahPutihTotal"
            android:layout_toEndOf="@+id/tvJumlahPutihTotal"
            android:text=" "
            android:textColor="#000000"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/button_proses1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/tv_Result_Kolesterol"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonBackprocess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="25sp"
                android:layout_weight="0.97"
                android:background="#303F9F"
                android:text="Back"
                android:textColor="#fff" />

            <Button
                android:id="@+id/buttonNextprocess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="#303F9F"
                android:text="Next"
                android:textColor="#fff" />

        </LinearLayout>

    </RelativeLayout>
</ScrollView>